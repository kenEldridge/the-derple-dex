---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../components/FormattedDate.astro';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
).slice(0, 3);

const base = import.meta.env.BASE_URL.endsWith('/') ? import.meta.env.BASE_URL : import.meta.env.BASE_URL + '/';
---

<!doctype html>
<html lang="en" data-theme="dark">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			.hero {
				width: 100%;
				max-width: 1024px;
				margin: 0 auto;
				padding: 0 1rem;
			}
			.hero-img {
				width: 100%;
				height: auto;
				border-radius: 8px;
			}
			main {
				max-width: 720px;
				margin: 0 auto;
				padding: 2rem;
			}
			.tagline {
				font-size: 1.25rem;
				line-height: 1.6;
				color: var(--text-secondary);
				margin-bottom: 2rem;
				text-align: center;
			}
			p {
				font-size: 1.125rem;
				line-height: 1.6;
				color: var(--text-primary);
				margin-bottom: 1.5rem;
			}
			a {
				color: var(--accent);
			}
			a:hover {
				text-decoration: underline;
			}
			.recent-posts {
				margin-top: 3rem;
			}
			.recent-posts h2 {
				font-size: 1.75rem;
				margin-bottom: 1.5rem;
				color: var(--text-heading);
			}
			.recent-posts ul {
				list-style: none;
				padding: 0;
				margin: 0;
				display: flex;
				flex-direction: column;
				gap: 1rem;
			}
			.recent-posts li {
				border: 1px solid var(--border);
				border-radius: 8px;
				overflow: hidden;
				transition: transform 0.2s, border-color 0.2s;
			}
			.recent-posts li:hover {
				transform: translateY(-2px);
				border-color: var(--accent);
			}
			.recent-posts li a {
				display: block;
				text-decoration: none;
				color: inherit;
			}
			.recent-posts li a:hover {
				text-decoration: none;
			}
			.recent-posts li img {
				width: 100%;
				height: auto;
				display: block;
			}
			.recent-posts .post-card-content {
				padding: 1.5rem;
			}
			.recent-posts h3 {
				margin: 0 0 0.5rem 0;
				font-size: 1.5rem;
				color: var(--text-heading);
			}
			.recent-posts .post-date {
				font-size: 0.875rem;
				color: var(--text-secondary);
				margin: 0 0 0.75rem 0;
			}
			.recent-posts .description {
				margin: 0;
				font-size: 1rem;
				color: var(--text-primary);
			}
			.view-all {
				display: inline-block;
				margin-top: 1.5rem;
				font-size: 1.125rem;
				font-weight: 600;
			}
		</style>
		<script is:inline>
			// Load saved theme or default to dark
			const savedTheme = localStorage.getItem('theme') || 'dark';
			document.documentElement.setAttribute('data-theme', savedTheme);
		</script>
	</head>
	<body>
		<Header />
		<div class="hero">
			<img src={`${base}derpledex_brand_pack/hero_3x1_1024x341.png`} alt="The DerpleDex" class="hero-img" />
		</div>
		<main>
			<p class="tagline">
				Technical blog and project showcase by Ken Eldridge.
				Exploring music, data, and code.
			</p>

			<section class="recent-posts">
				<h2>Recent Posts</h2>
				<ul>
					{posts.map((post) => (
						<li>
							<a href={`${base}blog/${post.id}/`}>
								{post.data.heroImage && (
									<img src={post.data.heroImage.src} alt="" />
								)}
								<div class="post-card-content">
									<h3>{post.data.title}</h3>
									<p class="post-date">
										<FormattedDate date={post.data.pubDate} />
									</p>
									<p class="description">{post.data.description}</p>
								</div>
							</a>
						</li>
					))}
				</ul>
				<a href={`${base}blog/`} class="view-all">View all posts â†’</a>
			</section>
		</main>
		<Footer />
	</body>
</html>
