---
import HeaderLink from './HeaderLink.astro';
const base = import.meta.env.BASE_URL.endsWith('/') ? import.meta.env.BASE_URL : import.meta.env.BASE_URL + '/';
---

<header>
	<nav class="container">
		<h2><a href={base}>the derple-dex</a></h2>
		<div class="nav-right">
			<div class="internal-links">
				<HeaderLink href={base}>Home</HeaderLink>
				<HeaderLink href={`${base}blog/`}>Blog</HeaderLink>
			</div>
			<div class="header-actions">
				<a href="https://github.com/kenEldridge" target="_blank" rel="noopener" aria-label="GitHub" title="View my GitHub">
					<svg viewBox="0 0 16 16" aria-hidden="true" width="24" height="24">
						<path
							fill="currentColor"
							d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"
						></path>
					</svg>
				</a>
				<button id="theme-toggle" aria-label="Toggle dark mode" title="Toggle dark mode">
					<span class="theme-icon">üåô</span>
				</button>
			</div>
		</div>
	</nav>
</header>

<script>
	// Theme toggle functionality
	const toggle = document.getElementById('theme-toggle');
	const html = document.documentElement;
	const icon = toggle?.querySelector('.theme-icon');

	// Set initial icon based on current theme
	const currentTheme = html.getAttribute('data-theme') || 'dark';
	if (icon) {
		icon.textContent = currentTheme === 'dark' ? 'üåô' : '‚òÄÔ∏è';
	}

	toggle?.addEventListener('click', () => {
		const current = html.getAttribute('data-theme');
		const next = current === 'dark' ? 'light' : 'dark';
		html.setAttribute('data-theme', next);
		localStorage.setItem('theme', next);
		if (icon) {
			icon.textContent = next === 'dark' ? 'üåô' : '‚òÄÔ∏è';
		}
	});
</script>

<style>
	header {
		background-color: var(--bg-primary);
		border-bottom: 1px solid var(--border);
		padding: 1rem 0;
		position: sticky;
		top: 0;
		z-index: 100;
		backdrop-filter: blur(10px);
	}

	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}

	h2 {
		margin: 0;
		font-size: 1.25rem;
		font-weight: 700;
	}

	h2 a {
		color: var(--text-heading);
		text-decoration: none;
	}

	.nav-right {
		display: flex;
		align-items: center;
		gap: 1.5rem;
	}

	.internal-links {
		display: flex;
		gap: 1.5rem;
		align-items: center;
	}

	.header-actions {
		display: flex;
		align-items: center;
		gap: 1rem;
	}

	.header-actions a {
		color: var(--text-primary);
		display: flex;
		align-items: center;
		transition: opacity 0.2s;
	}

	.header-actions a:hover {
		opacity: 0.7;
	}

	#theme-toggle {
		background: none;
		border: none;
		font-size: 1.5rem;
		cursor: pointer;
		padding: 0.25rem;
		display: flex;
		align-items: center;
		justify-content: center;
		transition: transform 0.2s;
	}

	#theme-toggle:hover {
		transform: scale(1.1);
	}

	.theme-icon {
		display: block;
		line-height: 1;
	}

	@media (max-width: 720px) {
		.internal-links {
			gap: 1rem;
		}
		h2 {
			font-size: 1.1rem;
		}
	}
</style>
