---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import DataFreshness from '../../components/data/DataFreshness.astro';
import DatasetStats from '../../components/data/DatasetStats.astro';
import TimeSeriesPlot from '../../components/data/TimeSeriesPlot.astro';
import FredPlot from '../../components/data/FredPlot.astro';
import NewsTimeline from '../../components/data/NewsTimeline.astro';
import datasets from '../../data/datasets.json';

export async function getStaticPaths() {
  return datasets.map(ds => ({
    params: { dataset: ds.name },
    props: { dataset: ds }
  }));
}

const { dataset } = Astro.props;
const base = import.meta.env.BASE_URL.endsWith('/')
  ? import.meta.env.BASE_URL
  : import.meta.env.BASE_URL + '/';

// Type label
const typeLabels: Record<string, string> = {
  ohlcv: 'Price Data',
  fred: 'Economic Data',
  rss: 'News Feed'
};
const typeLabel = typeLabels[dataset.type] || dataset.type;
const typeClass = `type-${dataset.type}`;
---

<!doctype html>
<html lang="en" data-theme="dark">
  <head>
    <BaseHead
      title={`${dataset.name} | Data | the derple-dex`}
      description={dataset.description}
    />
    <script is:inline>
      const savedTheme = localStorage.getItem('theme') || 'dark';
      document.documentElement.setAttribute('data-theme', savedTheme);
    </script>
  </head>
  <body>
    <Header />
    <main>
      <nav class="breadcrumb">
        <a href={`${base}data/`}>Data</a>
        <span class="separator">/</span>
        <span class="current">{dataset.name}</span>
      </nav>

      <div class="page-header">
        <div class="title-row">
          <h1>{dataset.name}</h1>
          <span class={`type-badge ${typeClass}`}>{typeLabel}</span>
        </div>
        <p class="description">{dataset.description}</p>
      </div>

      <DataFreshness
        firstFetched={dataset.meta.first_fetched}
        lastUpdated={dataset.meta.last_updated}
        lastRecordDate={dataset.meta.last_record_date}
        fetchCount={dataset.meta.fetch_count}
      />

      <DatasetStats
        stats={dataset.stats}
        type={dataset.type}
        meta={dataset.meta}
      />

      {dataset.type === 'ohlcv' && dataset.meta.symbols && (
        <TimeSeriesPlot
          datasetName={dataset.name}
          symbols={dataset.meta.symbols}
        />
      )}

      {dataset.type === 'fred' && dataset.meta.series && (
        <FredPlot
          datasetName={dataset.name}
          series={dataset.meta.series}
        />
      )}

      {dataset.type === 'rss' && (
        <NewsTimeline datasetName={dataset.name} />
      )}

      <section class="columns-info">
        <h3>Data Schema</h3>
        <div class="columns-grid">
          {dataset.meta.columns.map((col: string) => (
            <code class="column-name">{col}</code>
          ))}
        </div>
        {dataset.meta.primary_keys && dataset.meta.primary_keys.length > 0 && (
          <p class="primary-keys">
            Primary keys: <code>{dataset.meta.primary_keys.join(', ')}</code>
          </p>
        )}
      </section>
    </main>
    <Footer />
  </body>
</html>

<style>
  main {
    max-width: 1000px;
    margin: 0 auto;
    padding: 2rem;
  }

  .breadcrumb {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 1.5rem;
    font-size: 0.9rem;
  }

  .breadcrumb a {
    color: var(--accent);
    text-decoration: none;
  }

  .breadcrumb a:hover {
    text-decoration: underline;
  }

  .breadcrumb .separator {
    color: var(--text-secondary);
  }

  .breadcrumb .current {
    color: var(--text-secondary);
  }

  .page-header {
    margin-bottom: 1.5rem;
  }

  .title-row {
    display: flex;
    align-items: center;
    gap: 1rem;
    flex-wrap: wrap;
    margin-bottom: 0.5rem;
  }

  h1 {
    margin: 0;
    font-size: 2rem;
    color: var(--text-heading);
    font-family: monospace;
  }

  .type-badge {
    font-size: 0.8rem;
    padding: 0.25rem 0.625rem;
    border-radius: 4px;
  }

  .type-ohlcv {
    background: rgba(34, 197, 94, 0.2);
    color: #22c55e;
  }

  .type-rss {
    background: rgba(59, 130, 246, 0.2);
    color: #3b82f6;
  }

  .type-fred {
    background: rgba(168, 85, 247, 0.2);
    color: #a855f7;
  }

  .description {
    margin: 0;
    color: var(--text-secondary);
    font-size: 1.05rem;
    line-height: 1.5;
  }

  .columns-info {
    background: var(--bg-secondary);
    border: 1px solid var(--border);
    border-radius: 8px;
    padding: 1.25rem;
  }

  .columns-info h3 {
    margin: 0 0 1rem 0;
    font-size: 1rem;
    color: var(--text-heading);
  }

  .columns-grid {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .column-name {
    padding: 0.25rem 0.5rem;
    background: var(--bg-primary);
    border: 1px solid var(--border);
    border-radius: 4px;
    font-size: 0.85rem;
    color: var(--text-primary);
  }

  .primary-keys {
    margin: 1rem 0 0 0;
    font-size: 0.85rem;
    color: var(--text-secondary);
  }

  .primary-keys code {
    color: var(--accent);
    background: transparent;
    padding: 0;
  }

  @media (max-width: 720px) {
    main {
      padding: 1.5rem;
    }

    h1 {
      font-size: 1.5rem;
    }
  }
</style>
